<h2><%= @page_title %></h2>
<section>
  <div class="content row">
    <div class="col-md-12">
      <% if @posts.exists? %>
        <table class="table table-striped">
            <tr>
            <th>Post Title</th>
            <th>Post Category</th>
            <th>Date Created</th>
            <th>Actions</th>
            </tr>
            <% @posts.each do |post|  %>
            <tr>
            <td><%= post.title %></td>
            <td><%= post.category.name %></td>
            <td><%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
            <td><%= link_to "Edit", edit_admin_post_path(post), class: 'btn btn-primary' %> <%= link_to "Delete", admin_post_path(post), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this post - it is a good one?' } %></td>
            </tr>
            <% end %>
        </table>
        <%= will_paginate @post %>
      <% else %>
        <p>
            There are no posts
        </p>
      <% end %>
        <div class="add-post">
            <%= link_to "Add Post", new_admin_post_path, class: "btn btn-primary pull-right" %>
        </div>
    </div>
    <!-- End of col-md-12 below section -->
  </div>
  <!-- End of row below section -->
</section>
