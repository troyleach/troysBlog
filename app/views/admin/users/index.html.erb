<h2><%= @page_title %></h2>
<section>
  <div class="content row">
    <div class="col-md-12">
      <% if @users.exists? %>
        <table class="table table-striped">
            <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date Created</th>
            <th>Actions</th>
            </tr>
            <% @users.each do |user|  %>
            <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
            <td><%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-primary' %> <%= link_to "Delete", admin_user_path(user), class: 'btn btn-danger', method: :delete, data: { confirm: 'I agree delete this user, they are a idiot' } %></td>
            </tr>
            <% end %>
        </table>
        <%= will_paginate @users %>
      <% else %>
        <p>
            There are no users
        </p>
      <% end %>
        <div class="add-user">
            <%= link_to "Add User", new_admin_user_path, class: "btn btn-primary pull-right" %>
        </div>
    </div>
    <!-- End of col-md-12 below section -->
  </div>
  <!-- End of row below section -->
</section>
